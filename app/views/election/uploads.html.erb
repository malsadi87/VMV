<div class='container'>

<h3> <%= params[:title]%> </h3>
<p>You can download the data as a CSV file <%= link_to "Download", "/files/completed/#{params[:id]}/#{params[:file]}.csv", download: 'public-election-params.csv', class:"btn btn-secondary"%> </p> 
<p>File Headers :  <%= @fileContent.headers %></p><br>
<div class="contentTable">
<% index  = 1 %>
<% data = []%>
<table id="recordTable" class="contentTable table table-striped table-bordered" style="width:100%">
        <thead class='thead-light'>
            <tr>
            <th>Row</th>
            <% for field in @fileContent.headers %>
                <% data << field %>
                <th><%= field %></th>
            <% end %>     
            </tr>
        </thead>
        <tbody>
            <%  for row in @fileContent %>
            <tr>
               <td> <%= button_to 'View', {:controller => :election, :action => :record}, options = {params: {
                     headers: data*",",
                     row: row
                    }} %> </td>
               <% row.each do |c| %>
               <td> <%= truncate(c[1]) %> </td>
               <% end %>
            </tr>
            <% index = index + 1%>
            <% end%>
        </tbody>
    </table>
    </div>
    <script>
    $(document).ready(function() {
    $('#recordTable').DataTable();
} );
    </script>
    <script>
    $(document).on('click', '#recordTable tr', function() {  
      var link = $(this).data('href');
     $.ajax({
         type: 'GET',
         url: link
     });
    });
</script>
